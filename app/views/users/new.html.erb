<% provide(:title, 'Sign Up') %>

<div class="panel panel-default signup-panel">
	<div class="panel-heading">
		<h2 class="panel-title">Sign Up</h3>
	</div>
	<div class="panel-body">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<div class="input-group">
				<span class="input-group-addon">@</span>
				<%= f.text_field :username, class: "form-control Username", placeholder: "Username" %>
			</div>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
				<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
			</div>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
				<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
			</div>


			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
				<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
			</div>

			<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
	<div class="panel-footer">
		Already a member? <%= link_to "Sign In", signup_path %>.
	</div>
</div>